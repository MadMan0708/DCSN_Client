<root>
    <command name="getDownloadDir" numOfParams="0">
        <description>Getting directory for downloads</description>
    </command>
    
    <command name="setDownloadDir" numOfParams="1">
        <description>Setting directory for downloads</description>
        <param order="1">Path do downloads directory</param>
    </command>
    
    <command name="getServerAddress" numOfParams="0">
        <description>Getting server IP adress</description>
    </command>
    
    <command name="setServerAddress" numOfParams="1">
        <description>Setting server IP address</description>
        <param order="1">new IP address</param>
    </command>
    
    <command name="getServerPort" numOfParams="0">
        <description>Getting server port</description>
    </command>
    
    <command name="setServerPort" numOfParams="1">
        <description>Setting server port</description>
        <param order="1">new server port</param>
    </command>
    
    <command name="getName" numOfParams="0">
        <description>Getting client name</description>
    </command>
    
    <command name="setName" numOfParams="1">
        <description>Setting client name</description>
        <param order="1">new client name</param>
    </command>
    
    <commad name="list" numOfParams="1">
        <description>Shows client's projects on the server</description>
        <param order="1">group of projects which can listed, groups are - all, completed,paused,active </param>
    </commad>
    
    <commad name="pause" numOfParams="1">
        <description>Pauses project</description>
        <param order="1">name of the project</param>
    </commad>
    
    <commad name="unpause" numOfParams="1">
        <description>Unpauses project</description>
        <param order="1">name of the project</param>
    </commad>
    
    <commad name="cancel" numOfParams="1">
        <description>Canceled project</description>
        <param order="1">name of the project</param>
    </commad>
    
    <commad name="downloadReady" numOfParams="1">
        <description>Checks if project is ready for download</description>
        <param order="1">name of the projects</param>
    </commad>
    
    <commad name="exit" numOfParams="0">
        <description>Closes application</description>
    </commad>
    
    <commad name="download" numOfParams="1">
        <description>Downloads project</description>
        <param order="1">name of the project</param>
    </commad>
    
    <commad name="upload" numOfParams="3">
        <description>Uploads project</description>
        <param order="1">path to project file - zip and jar accepted</param>
        <param order="2">name of the project</param>
        <param order="3">project priority</param>
    </commad>
    
    <commad name="connect" numOfParams="0">
        <description>Connects to the server, details has to be set before connection</description>
    </commad>
    
    <commad name="disconnect" numOfParams="0">
        <description>Disconnects from the server</description>
    </commad>
    
    <commad name="startCalculation" numOfParams="0">
        <description>Clients will start accepting tasks from server to calculation</description>
    </commad>
    
    <commad name="endCalculation" numOfParams="0">
        <description>Clients will stop accepting tasks from server to calculation</description>
    </commad>
    
    <command name="getInfo" numOfParams="0">
        <description>Prints actual client settings</description>
    </command>
    
    <command name="automatic" numOfParams="4;5">
        <desctription>Sets the automatic computation</desctription>
        <param order="1">Path to project file</param>
        <param order="2">Project name</param>
        <param order="3">Project priority</param>
        <param order="4">Path to class file which is used to alter class files</param>
        <param order="5" optional="true">Number of cycles. If it is not specified, number of cycle is infinity</param>
    </command>
    
</root>
